{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/output/a.out"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile C program"
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${fileDirname}/output/a.out"
        },
        {
            "label": "Build and Run",
            "dependsOn": ["Build and Run C Program", "Run Program"],
            "dependsOrder": "sequence"
        }
    ]
}
