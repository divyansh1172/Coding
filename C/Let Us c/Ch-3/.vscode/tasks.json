{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Prepare Output Folder",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/output"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/output/${fileBasenameNoExtension}"
            ],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Make Executable",
            "type": "shell",
            "command": "chmod",
            "args": [
                "+x",
                "${fileDirname}/output/${fileBasenameNoExtension}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run C Executable",
            "type": "shell",
            "command": "${fileDirname}/output/${fileBasenameNoExtension}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Build and Run C Program",
            "dependsOn": [
                "Prepare Output Folder",
                "Build C Program",
                "Make Executable",
                "Run C Executable"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
